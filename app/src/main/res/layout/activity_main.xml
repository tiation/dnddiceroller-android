<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/magical_gradient_background">

    <!-- Header Section -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="🧙‍♂️ Dungeon Master: Weaver of Fates ✨"
        android:textSize="24sp"
        android:textStyle="bold"
        android:contentDescription="@string/cd_app_title"
        android:importantForAccessibility="yes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Character Selector -->
    <Spinner
        android:id="@+id/characterSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:contentDescription="@string/cd_character_selector"
        app:layout_constraintTop_toBottomOf="@id/titleText"/>

    <!-- Dice Options -->
    <HorizontalScrollView
        android:id="@+id/diceOptionsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/cd_dice_options"
        app:layout_constraintTop_toBottomOf="@id/characterSpinner">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/diceOptionsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/d4Chip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d4"
                android:contentDescription="@string/cd_d4_die"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/d6Chip"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d6"
                android:contentDescription="@string/cd_d6_die"/>

            <!-- Add other dice options similarly -->

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Modifier Controls -->
    <LinearLayout
        android:id="@+id/modifierControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/diceOptionsScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/decreaseModifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:contentDescription="@string/cd_decrease_modifier"/>

        <TextView
            android:id="@+id/modifierValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0"
            android:textSize="20sp"
            android:padding="16dp"
            android:contentDescription="@string/cd_current_modifier"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/increaseModifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:contentDescription="@string/cd_increase_modifier"/>
    </LinearLayout>

    <!-- Roll Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/rollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/roll_dice"
        android:contentDescription="@string/cd_roll_dice"
        app:layout_constraintTop_toBottomOf="@id/modifierControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"/>

    <!-- Chronicle Banner -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/chronicleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chronicle of Rolls (8)"
        android:contentDescription="@string/cd_view_roll_history"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>
