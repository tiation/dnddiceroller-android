<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accessibility Settings"
            android:textAppearance="@style/TextAppearance.DungeonMaster.Headline1.Accessibility"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/cd_accessibility_title"/>

        <!-- High Contrast Mode -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchHighContrast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High Contrast Mode"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.DungeonMaster.Body1.Accessibility"
            android:contentDescription="@string/cd_high_contrast_switch"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enhances visibility with stronger contrasts"
            android:textAppearance="@style/TextAppearance.DungeonMaster.Body2.Accessibility"
            android:padding="16dp"/>

        <!-- Font Size -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Font Size"
            android:textAppearance="@style/TextAppearance.DungeonMaster.Body1.Accessibility"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/cd_font_size_label"/>

        <SeekBar
            android:id="@+id/seekBarFontSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="100"
            android:padding="16dp"
            android:contentDescription="@string/cd_font_size_slider"/>

        <!-- Voice Control -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVoiceControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure Voice Control"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:contentDescription="@string/cd_voice_control_button"/>

        <!-- Help Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accessibility Help"
            android:textAppearance="@style/TextAppearance.DungeonMaster.Headline2.Accessibility"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/cd_help_section_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accessibility_help_text"
            android:textAppearance="@style/TextAppearance.DungeonMaster.Body1.Accessibility"
            android:padding="16dp"
            android:contentDescription="@string/cd_help_content"/>

    </LinearLayout>
</ScrollView>
